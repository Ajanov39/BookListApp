<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookListApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="EditTextStyle" parent="Theme.MaterialComponents">
        <item name="android:paddingStart">@dimen/dimen_5</item>
        <item name="android:paddingEnd">@dimen/dimen_5</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textColorHint">@color/purple_700</item>
        <item name="android:textSize">@dimen/dimen_text_16</item>

    </style>

    <style name="TextViewStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/dimen_text_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle18" parent="Theme.AppCompat">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/dimen_text_18</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewStyle16" parent="Theme.AppCompat">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/dimen_text_16</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>